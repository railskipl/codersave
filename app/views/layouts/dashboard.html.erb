<!DOCTYPE html>
<html>
<head>
<title>CoderSave - cheap programming tutorials</title>
<%= stylesheet_link_tag  "ajaxful_rating.css","style2.css"%>
   
<%= javascript_include_tag 'application' %>
<%= ajaxful_rating_style %>
<%= csrf_meta_tag %>

</head>
<body>
<div align="center" id="maindiv">
		<div align="center" id="wrapper">

  			<div id="header">
			
	<div id="logo2">
		<% if signed_in? %>
			<%= link_to image_tag('/assets/logo2.png'), user_root_path %>
		<% else %>
			<%= link_to image_tag('/assets/logo2.png'), root_path %>
		<% end %>
		
	</div>

<div class="top_right_menu">
	<%= current_user.email rescue "" %>
	<% if signed_in? %>  
		<%= link_to "Home", user_root_path %>
	<% end %>	 
			<a href="/pages/about-us">About us</a>
 	        <a href="/pages/how-it-works">How it works</a>
 	<% if signed_in? %> 
		<%= link_to "My Account", users_my_profile_path %>
	<% end %>        
	<a href="/pages/contact">Contact</a>

	<% if signed_in? %>     
		<%= link_to "Logout", user_signout_path %>
	<% end %>
	</div>
</div>

<%= yield %>
 <%- flash.each do |key, msg| -%>
  <div id="<%= key %>">
   
    <p><%= msg %></p>
    <div class="clear"></div>
  </div>
<%- end -%>
<div class="footer_wrap">
 <div class="footer">
  <div style="width:40%; float:left; text-align:left">
  	Codersave.com <img src ="/assets/copyright.png" >&nbsp;2012 &nbsp;&nbsp; <a href="/pages/terms">Terms </a> &nbsp;|&nbsp; <a href="/pages/privacy">Privacy </a>
  	
   	
  </div>
  <div style="width:40%; float:right">
  	
  	
  </div>
  
  </div>
  
  </div>
  </div>
</div>
</body>
</html>
